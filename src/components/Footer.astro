      <!-- Brand -->
      <div class="md:col-span-2">
        <a href="#inicio" class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary to-accent flex items-center justify-center font-display font-black text-xl">
            O
