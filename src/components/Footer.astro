      </div>

      <!-- Links -->
      <div>
        <h4 class="font-display font-semibold text-white mb-4">Servicios</h4>
        <ul class="space-y-3">
          {links.servicios.map(link => (
            <li>
              <a href={link.href} class="text-slate-400 hover:text-primary-light transition-colors duration-300 text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="font-display font-semibold text-white mb-4">Empresa</h4>
        <ul class="space-y-3">
          {links.empresa.map(link => (
            <li>
              <a href={link.href} class="text-slate-400 hover:text-primary-light transition-colors duration-300 text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="pt-8 border-t border-white/5 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-sm text-slate-500">
        &copy; 2026 Orquest System Automation. Todos los derechos reservados.
      </p>
      <p class="text-xs text-slate-600">
        Hecho con IA y creatividad humana
      </p>
    </div>
  </div>
